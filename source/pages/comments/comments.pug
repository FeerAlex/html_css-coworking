				li.pagination__item
					a(href="#").pagination__link 3
				li.pagination__item
					a(href="#").pagination__link 4
				li.pagination__item
					a(href="#").pagination__link 5
				li.pagination__item
					a(href="#").pagination__link 6
				li.pagination__item
					a(href="#").pagination__link 7
			a(href="#").pagination__btn.pagination__btn_next
				i.icon.icon-arrow-right-bold &#xe805;

	.form
		h2.form__title Оставить отзыв
		.form__fields
			form(action="#" method="get").form__tag
				.form__inputs
					.form__row.clearfix
						.form__elem.form__elem_left
							label(for="name").form__elem-title Ваше имя
							input(type="text" name="name" placeholder="Андрей").form__input.form__input_small#name
						.form__elem.form__elem_right
							label(for="vk").form__elem-title Ссылка на профиль VK
							input(type="text" name="vk" placeholder="vk.com/example").form__input.form__input_small#vk
					.form__row
						.form__texarea
							label(for="comment").form__elem-title Текст отзыва
							textarea(placeholder="Мне понравилось" name="comment").form__input.form__input_big#comment
				.form__buttons.clearfix
					.form__radios
						.form__radios-title Отображать фото в отзыве?
						.form__radios-container
							.form__radio.radio
								label.radio__label
									input(type="radio" name="photo" id="yes").radio__label-elem
									.radio__label-circle
									.radio__label-name Да
								label.radio__label
									input(type="radio" name="photo" id="no").radio__label-elem
									.radio__label-circle
									.radio__label-name Нет
							
					.form__controls
						button(type="submit").form__submit Отправить